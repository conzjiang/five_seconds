<section class="resume">
  <header>
    <h1><%= @user.full_name %></h1>
    <h2><%= @user.status %></h2>
    <a href="<%= edit_resume_url %>">Edit</a>
  </header>

  <article class="experience">
    <h3>Experience</h3>
    <ul class="experiences">
      <% @user.experiences.each do |exp| %>
        <li><%= render exp %></li>
      <% end %>
    </ul>
  </article>
</section>