<section class="resume">
  <header>
    <h1><%= @user.full_name %></h1>
    <h2><%= @user.status %></h2>
  </header>

  <article class="experience">
    <h3>Experience</h3>
    <ul class="experiences">
      <% @user.experiences.map(&:decorate).each do |exp| %>
        <li>
          <h4><%= exp.title %></h4>
          <h5><%= exp.company_name %></h5>
          <small><%= exp.time %></small>

          <ul class="items">
            <% exp.items.each do |item| %>
              <li><%= item.description %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </article>
</section>